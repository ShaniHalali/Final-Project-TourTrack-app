<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reports.ReportsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7F1E8"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ✳️ Report a Problem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DFEDF3"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report a Problem"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/play_fair_display_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select report type:"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerReportType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSelectLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add location"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_camera"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add photo"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What happened?"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etProblemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint=""
                    android:background="@android:drawable/edit_text"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="14dp" />

                <Button
                    android:id="@+id/btnSendReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Report"
                    android:backgroundTint="#FFF5CC"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ✳️ Share a Recommendation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DFEDF3"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share a Recommendation"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/play_fair_display_regular" />

                <EditText
                    android:id="@+id/etRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="What do you recommend to fellow travelers?"
                    android:background="@android:drawable/edit_text"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_camera"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add photo (optional)"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnShareTip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share My Tip"
                    android:backgroundTint="#FFF5CC"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ✳️ My Reports -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DFEDF3"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Reports"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/play_fair_display_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFF8DC"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type: Hazard"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 2024-10-05"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Pine Ridge Trail"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: A fallen tree is blocking the path near the summit."
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textColor="#000000"
                            android:backgroundTint="#FFDDDD"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:textColor="#000000"
                            android:backgroundTint="#FFCCCC" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
