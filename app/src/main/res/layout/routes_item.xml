<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="#E1BEE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_route_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 5 km"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_route_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty: Medium"
            android:textSize="15sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_route_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather: Clouds"
            android:textSize="15sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_route_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trail description goes here."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp" />

        <ImageView
            android:id="@+id/img_route"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/treesback" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
